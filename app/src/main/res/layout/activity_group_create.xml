<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wilki.tica.activities.CreateNewGroupActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/group_createinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        tools:context=".EditorActivity">

        <TextView
            android:id="@+id/create_new_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_group"
            android:textSize="40sp" />

        <!-- School category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Label -->
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/SchoolName" />

            <!-- Input fields -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="4dp">
                <!-- school drop-down spinner -->
                <Spinner
                    android:id="@+id/spinner_school"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingRight="16dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>

        <!-- Group category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Label -->
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/category_Group" />

            <!-- Input fields -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="4dp">


                <EditText
                    android:id="@+id/edit_group_name"
                    style="@style/EditorFieldStyle"
                    android:hint="group_name"
                    android:inputType="textCapWords" />
            </LinearLayout>


        </LinearLayout>

        <!-- Student category-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/CategoryStyle"
                android:text="@string/category_Student1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="4dp">

                <!-- student 1 name list drop-down spinner -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_student1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                </LinearLayout>

                <!--  <TextView
                    android:id="@+id/test_Student1_notfound"
                    style="@style/EditorFieldStyle"
                    android:hint="@string/hint_Student_infoNotfound"
                    android:inputType="textCapWords" />

              if the student 1 information not found it can be added manually
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_Student1_name"
                    style="@style/EditorFieldStyle"
                    android:hint="@string/hint_Student_name"
                    android:inputType="textCapWords" />

                    <Spinner
                        android:id="@+id/spinner_gender_student1"
                        android:layout_height="48dp"
                        android:layout_width="wrap_content"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>!-->

            </LinearLayout>
        </LinearLayout>


        <!-- Student category-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/category_Student2" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="4dp">
                <!-- student 2 name list drop-down spinner -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_student2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                </LinearLayout>

                <!--  <TextView
                      android:id="@+id/test_Student2_notfound"
                      style="@style/EditorFieldStyle"
                      android:hint="@string/hint_Student_infoNotfound"
                      android:inputType="textCapWords" />

                   if the student 1 information not found it can be added manually
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_Student2_name"
                        style="@style/EditorFieldStyle"
                        android:hint="@string/hint_Student_name"
                        android:inputType="textCapWords" />

                    <Spinner
                        android:id="@+id/spinner_gender_student2"
                        android:layout_height="48dp"
                        android:layout_width="wrap_content"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

                !-->
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

