<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wilki.tica.activities.TaskCompleteActivity">

    <TextView
        android:text="@string/task_complete_well_done"
        android:textSize="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:id="@+id/completionMessageTv"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textAlignment="center" />

    <Button
        android:background="@drawable/new_task_button"
        android:layout_width="550dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/start_new_task_btn"
        android:onClick="startNewTask"/>

    <Button
        android:background="@drawable/main_menu_button"
        android:layout_width="550dp"
        android:layout_height="110dp"
        android:layout_below="@+id/start_new_task_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/rtn_main_menu_btn"
        android:onClick="returnToMainMenu"/>
</RelativeLayout>
